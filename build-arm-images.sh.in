#!/bin/sh

TARGET="$1"
[ -n "$TARGET" ] && shift

set -e

PLATFORMS="beaglebone cubieboard2 cubietruck odroid-u2 rpi rpi2 usbarmory"
DATE=$(date '+%Y%m%d')

for f in ${PLATFORMS}; do
        if [ -z "$TARGET" -o "$TARGET" = "$f" ]; then
		./mkrootfs.sh $@ $f
		./mkimage.sh void-${f}-rootfs-${DATE}.tar.xz
		xz -T0 void-${f}-${DATE}.img
	fi
done
